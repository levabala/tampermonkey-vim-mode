{
    "name": "tampermonkey-vim-mode",
    "version": "1.0.31",
    "description": "Vim-like editing for textareas and inputs",
    "type": "module",
    "scripts": {
        "build": "bun run build.ts",
        "test": "bunx vitest run",
        "test:watch": "bunx vitest",
        "test:ui": "bunx vitest --ui",
        "test:coverage": "bunx vitest --coverage",
        "test:e2e": "bunx playwright test --reporter=list",
        "test:e2e:ui": "bunx playwright test --ui",
        "test:e2e:headed": "bunx playwright test --headed",
        "test:e2e:report": "bunx playwright test; bunx playwright show-report",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@playwright/test": "^1.55.1",
        "@types/bun": "^1.2.23",
        "@types/node": "^24.6.2",
        "@vitest/ui": "^2.1.8",
        "eslint": "^9.36.0",
        "jsdom": "^25.0.1",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.45.0",
        "vitest": "^2.1.8"
    }
}
